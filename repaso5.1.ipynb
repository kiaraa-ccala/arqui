void Moving_Average_C(int *Vin, int N, int W, float *Vout){
    int datos= (W-1)/2;
    for(int i=0; i<N; i++){
        Vout[i]=0;
        if (i<datos){
            for(int j=0; j<W ;j++){
                Vout[i]+=Vin[j];
                }
            Vout[i]=Vout[i]/(float)W;
            }
        if (i>=datos && i<=N-datos-1){
            for(int k=i-datos; k<i+datos; k++){
                Vout[i]+=Vin[k];
                }
            Vout[i]=Vout[i]/(float)W;
            }
        if (i>N-datos-1){
            for(int l=N-1;l>N-1-W;l--){
                Vout[i]+=Vin[l];
            }
            Vout[i]=Vout[i]/(float)W;
            }
    }
}


